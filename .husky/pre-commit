#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npx --no -- commitlint --edit "$1"
# Limpiar espacios al final SOLO en archivos que existen
echo "ğŸ§¹ Limpiando espacios al final de las lÃ­neas..."
